# Server Configuration
PORT=3001
NODE_ENV=development

# MongoDB Connection
# Local: mongodb://localhost:27017/name_ai
# MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/name_ai?retryWrites=true&w=majority
MONGODB_URI=mongodb://localhost:27017/name_ai
# Alternative: DATABASE_URL (will be used if MONGODB_URI is not set)
DATABASE_URL=mongodb://localhost:27017/name_ai

# JWT Secret for authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Resend API Key for emails
RESEND_API_KEY=re_your_api_key_here
CONTACT_EMAIL=hello@name.ai

# CORS
FRONTEND_URL=http://localhost:3000

# Calendly URL
CALENDLY_URL=https://calendly.com/your-username/demo
